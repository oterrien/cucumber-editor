<?xml version="1.0" encoding="UTF-8"?>

<?import com.ote.app.component.ImageButton?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox fx:id="root" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="200.0" prefWidth="200.0"
      fx:controller="com.ote.app.view.scenario.ScenarioEditView" xmlns="http://javafx.com/javafx/null"
      xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox prefHeight="15.0" prefWidth="600.0" >
            <children>
                <Label text="Scenario: " textFill="ForestGreen">
                    <font>
                        <Font name="Segoe UI Bold" size="20.0"/>
                    </font>
                </Label>
                <TextField fx:id="title" HBox.hgrow="ALWAYS">
                    <font>
                        <Font name="Segoe UI Italic" size="16.0"/>
                    </font>
                </TextField>
            </children>
        </HBox>
        <TextArea fx:id="description" prefHeight="145.0" prefWidth="200.0">
            <font>
                <Font name="Segoe UI" size="16.0"/>
            </font>
        </TextArea>
        <ButtonBar prefHeight="20.0" prefWidth="200.0">
            <buttons>
                <ImageButton onAction="#validate" mnemonicParsing="false"
                             imageURL="icons3/thumb_up.png" fitHeight="40" fitWidth="40"/>
                <ImageButton onAction="#cancel" mnemonicParsing="false"
                             imageURL="icons3/thumb_down.png" fitHeight="40" fitWidth="40"/>
            </buttons>
        </ButtonBar>
    </children>
</VBox>
